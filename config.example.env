# HyprContext Windows Konfigürasyonu
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin

# Ollama Ayarları
OLLAMA_URL=http://localhost:11434
MODEL_VISION=gemma3
MODEL_EMBED=mxbai-embed-large

# Zamanlama (saniye)
CAPTURE_INTERVAL=20
MIN_COOLDOWN=5

# Bellek
RAM_SIZE=5
MEMORY_DAYS=30

# Yasaklı siteler/uygulamalar (virgülle ayrılmış)
BANNED_KEYWORDS=youtube,instagram,twitter,reddit,netflix,tiktok,facebook

# Odak Ayarları
DISTRACTION_THRESHOLD=3
DAILY_DISTRACTION_LIMIT=1800

# Veritabanı
DB_PATH=hyprcontext.db

# Geçici dosyalar
TEMP_SCREENSHOT_PATH=temp_screenshot.png


